@model SistemaVentas.Models.Entities.Clientes

@{
    ViewData["Title"] = "Iniciar sesión";
}

<h2>Iniciar sesión</h2>

<!-- Si el inicio de sesión falla, mostrar un mensaje de error -->
@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Error"]
    </div>
}

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="correo">Correo</label>
        <input asp-for="correo" class="form-control" required />
        <span asp-validation-for="correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="telefono">Teléfono</label>
        <input asp-for="telefono" class="form-control" required />
        <span asp-validation-for="telefono" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Iniciar sesión</button>
</form>

<br>

<p>No tienes cuenta? <a href="@Url.Action("Create", "Clientes")">Crear cuenta</a></p>

