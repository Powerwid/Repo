@model SistemaVentas.Models.Entities.Clientes

@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Iniciar sesión</h2>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Success"]
                        </div>
                    }

                    @if (ViewData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @ViewData["Error"]
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label asp-for="correo" class="form-label">Correo electrónico</label>
                            <input asp-for="correo" class="form-control" required />
                            <span asp-validation-for="correo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="telefono" class="form-label">Teléfono</label>
                            <input asp-for="telefono" class="form-control" required />
                            <span asp-validation-for="telefono" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                        </div>
                    </form>

                    <hr />

                    <p class="text-center">
                        ¿No tienes cuenta?
                        <a href="@Url.Action("Create", "Clientes")">Regístrate aquí</a>
                    </p>

                    <p class="text-center mt-3">
                        <strong>¿Eres administrador?</strong>
                        <a href="@Url.Action("LoginAdmin", "Home")" class="text-decoration-underline">Inicia sesión aquí</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}