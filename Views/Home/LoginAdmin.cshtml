@model SistemaVentas.Models.Entities.Usuarios

@{
    ViewData["Title"] = "Login Administrador";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Administrador - Iniciar sesión</h2>

                    @if (ViewData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @ViewData["Error"]
                        </div>
                    }

                    <form asp-action="LoginAdmin" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="usuario" class="form-label">Usuario</label>
                            <input asp-for="usuario" class="form-control" required />
                            <span asp-validation-for="usuario" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="contraseña" class="form-label">Contraseña</label>
                            <input asp-for="contraseña" type="password" class="form-control" required />
                            <span asp-validation-for="contraseña" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                        </div>
                    </form>

                    <hr />
                    <p class="text-center text-muted">Solo para uso administrativo</p>
                </div>
            </div>
        </div>
    </div>
</div>
