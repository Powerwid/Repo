@model IEnumerable<SistemaVentas.Models.Entities.Categoria>

@{
    ViewData["Title"] = "Lista de Categorías";
}

<h1>Lista de Categorías</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Categoría</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model ?? Enumerable.Empty<SistemaVentas.Models.Entities.Categoria>())
        {
            <tr>
                <td>@(item.nombre ?? "Sin nombre")</td>
                <td>@(item.descripcion ?? "Sin descripción")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id_categoria" class="btn btn-warning">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.id_categoria" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>