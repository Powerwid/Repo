@model SistemaVentas.Models.Entities.Usuarios

@{
    ViewData["Title"] = "Registro de Usuario";
}

<h2>Registro de Usuario</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="nombre">Nombre</label>
        <input asp-for="nombre" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="apellido">Apellido</label>
        <input asp-for="apellido" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="correo">Correo</label>
        <input asp-for="correo" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="usuario">Usuario</label>
        <input asp-for="usuario" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="contraseña">Contraseña</label>
        <input asp-for="contraseña" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="estado">Estado</label>
        <input asp-for="estado" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Registrarse</button>
</form>