@model IEnumerable<SistemaVentas.Models.Entities.Carrito>

<h1>Carrito de Compras</h1>

<table class="table">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Fecha Agregado</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!-- Mostrar nombre y apellido del cliente -->
                <td>@item.cliente?.nombre @item.cliente?.apellido</td>
                <td>@item.producto?.nombre</td>
                <td>@item.cantidad</td>
                <td>@item.fecha_agregado</td>
                <td>@item.estado</td>
            </tr>
        }
    </tbody>
</table>
