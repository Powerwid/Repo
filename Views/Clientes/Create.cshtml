@model SistemaVentas.Models.Entities.Clientes

@{
    ViewData["Title"] = "Registro de Cliente";
}

<h2>Registro de Cliente</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label asp-for="nombre">Nombre</label>
        <input asp-for="nombre" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="apellido">Apellido</label>
        <input asp-for="apellido" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="correo">Correo</label>
        <input asp-for="correo" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="telefono">Teléfono</label>
        <input asp-for="telefono" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="direccion">Dirección</label>
        <input asp-for="direccion" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Registrarse</button>
</form>
